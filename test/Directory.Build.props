  <ItemGroup>
    <PackageReference Include="FluentAssertions" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="$(RepoRootPath)\test\xunit.runner.json" CopyToOutputDirectory="PreserveNewest" Pack="false" />
  </ItemGroup>

</Project>
